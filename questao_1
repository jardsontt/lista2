#include<stdio.h>

int Soma(int*);

int main(){
	int numeros[4];
	int i,soma;
	printf("A soma de quatro numeros inteiros!");
	
	for(i=0;i<4;i++){
		printf("\nDigite o numero: ");
		scanf("%d",&numeros[i]);
}	
	soma = Soma(numeros);
	printf("\nA soma dos quatro numeros inteiros eh: %d", soma);
	
	return 0;
}
int Soma(int* v){
	int i;
	float s = 0.0;
	for(i=0;i<4;i++){
		s+=v[i];
	}
	return s;
}
